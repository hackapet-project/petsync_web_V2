# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_ENV=production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
DJANGO_FORCE_HTTPS=True

# PostgreSQL Configuration
# Use simple static values - no random suffixes or shell commands needed
POSTGRES_DB=petsync_db
POSTGRES_USER=petsync_user
POSTGRES_PASSWORD=secure-password-here

# Database URL for Django (constructed from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Frontend API URL (optional - auto-detected by default)
# VITE_API_URL=/api

# Note: Avoid using shell commands in variable substitutions like $(date +%s)
# Use simple variable references: ${VAR_NAME:-default_value}